                                    </configuration>
                                </execution>
                            </executions>
                        </plugin>

                        <plugin>
                            <groupId>org.moditect</groupId>
                            <artifactId>moditect-maven-plugin</artifactId>
                            <version>${moditect.maven.plugin.version}</version>
                            <configuration>
                                <jvmVersion>9</jvmVersion>
                            </configuration>
                        </plugin>

                    </plugins>
                </pluginManagement>

                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                        <excludes>
